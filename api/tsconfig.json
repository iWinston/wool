{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["./config/*"],
      "@plugin/*": ["./plugin/*"],
      "@common/*": ["./common/*"],
      "@src/*": ["./src/*"],
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
